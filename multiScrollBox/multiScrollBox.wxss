.nav {
  display: flex;
  text-align: center;
	justify-content: center;
	align-items: center;
}
.head {
	position: relative;
}
.head .num {
	position: absolute;
	top: 0;
	left: 180rpx;
	background-color: #D9D9D9;
	padding: 0.15em 0.4em;
	min-width: 18rpx;
	border-radius: 30rpx;
	color: #fff;
	line-height: 1.2;
	text-align: center;
	font-size: 24rpx;
}
.head .num.active {
	background-color: #f00;
}
.box {
  display: flex;
  justify-content: center;
}
.spinner {
  margin: 0 auto;
  width: 50rpx;
	text-align: center;
	padding-bottom: 30rpx;
  font-size: 10rpx;
}
 
.spinner .rect {
  background:linear-gradient(to bottom, #2CE3C5 , #2CC8E1);
  height: 50rpx;
	width: 6rpx;
	margin-right: 5rpx;
  display: inline-block;
  animation: stretchdelay 1.2s infinite ease-in-out;
}
 
.spinner .rect2 {
  animation-delay: -1.1s;
}
 
.spinner .rect3 {
  animation-delay: -1.0s;
}
 
.spinner .rect4 {
  animation-delay: -0.9s;
}
 
.spinner .rect5 {
  animation-delay: -0.8s;
}
@keyframes stretchdelay {
  0%, 40%, 100% {
    transform: scaleY(0.4);
	}
	20% {
    transform: scaleY(1.0);
  }
}
.none {
	padding-bottom: 20rpx;
	text-align: center;
	font-size: 30rpx;
}