.spinner {
  margin: 0 auto;
  width: 50rpx;
	text-align: center;
	padding-bottom: 30rpx;
  font-size: 10rpx;
}
 
.spinner .rect {
  background:linear-gradient(to bottom, #2CE3C5 , #2CC8E1);
  height: 50rpx;
	width: 6rpx;
	margin-right: 5rpx;
  display: inline-block;
  animation: stretchdelay 1.2s infinite ease-in-out;
}
 
.spinner .rect2 {
  animation-delay: -1.1s;
}
 
.spinner .rect3 {
  animation-delay: -1.0s;
}
 
.spinner .rect4 {
  animation-delay: -0.9s;
}
 
.spinner .rect5 {
  animation-delay: -0.8s;
}
@keyframes stretchdelay {
  0%, 40%, 100% {
    transform: scaleY(0.4);
	}
	20% {
    transform: scaleY(1.0);
  }
}
.none {
	padding-bottom: 20rpx;
	text-align: center;
	font-size: 30rpx;
}